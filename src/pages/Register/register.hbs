<main>
	<section class="reg__formData">
		<h2 class="reg__title">Регистрация</h2>
		<form action="" method="get">
                <div class="reg__inputContainer">
                    {{{ email }}}
                    <label for="email" class="label">Почта</label>
                </div>
                <div class="reg__inputContainer">
                    {{{ login }}}
                    <label for="login" class="label">Логин</label>
                </div>
				<div class="reg__inputContainer">
					{{{ first_name }}}
					<label for="first_name" class="label">Имя</label>
				</div>
				<div class="reg__inputContainer">
					{{{ second_name }}}
					<label for="second_name" class="label">Фамилия</label>
				</div>
                <div class="reg__inputContainer">
                    {{{ phone }}}
                    <label for="phone" class="label">Телефон</label>
                </div>

				<div class="reg__inputContainer">
					{{{ password }}}
					<label for="password" class="label">Пароль</label>
				</div>
                <div class="reg__inputContainer">
                    {{{ confirm_password }}}
                    <label for="confirm_password" class="label">Повторить пароль</label>
                </div>
                <div class="reg__div__button">
                    {{{ button }}}
                </div>


		</form>
	</section>
</main>
